<form method="post" action="{{ path('articles_delete', {'id': article.id}) }}" onsubmit="return confirm('Czy na pewno chcesz usunąć ten artykuł?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
    <button style="margin-top: 1%; margin-left: 5%" class="btn">{{ 'delete_button'|trans }}</button>
</form>
