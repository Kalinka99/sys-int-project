{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
    <div id="artykuÅ‚">
        <h1>{{ article.title }}</h1>
        <p>{{ article.created ? article.created|date('d.m.Y H:i') : '' }} Admin</p>
        <p>{{ article.mainText }}</p>
        <div>
            {% for tag in article.tags %}
                <p style="color: purple; font-weight: bold">{{ tag.name }}</p>
            {% endfor %}
        </div>
    </div>

    {% if app.user %}
    <div style="display: block; margin-left: 40%;">
        <button style="margin-left: 4%"><a href="{{ path('articles_edit_1', {'id': article.id}) }}">EDYTUJ</a></button>
        {{ include('articles/_delete_form.html.twig') }}
    </div>
    {% endif %}
    <div style="margin-bottom: 2%">
        <h3 style="color: purple; font-size: 20px; margin-left: 15%">Komentarze</h3>
            {% for comment in article.getComments() %}
                <div style="border-bottom: 3px solid white; padding-bottom: 2%; margin-left: 15%; margin-right: 15%">
                    <h3>{{ comment.authorUsername }}</h3>
                    <p>{{ comment.created|date('d.m.Y H:i') }}</p>
                    <p>{{ comment.mainText }}</p><br>
                    {% if app.user %}
                        {{ include('comments/_delete_form.html.twig') }}
                    {% endif %}
                </div>
            {% endfor %}
    </div>
    {{ include('/comments/_form.html.twig') }}

{% endblock %}
