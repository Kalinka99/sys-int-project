{% extends 'base.html.twig' %}

{% block title %}Zaloguj się!{% endblock %}

{% block body %}
    </div>
    <div style="padding: 3%; padding-left:45%; margin-top: 10%;">
    <form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h3 style="padding-left: 3%" class="h3 mb-3 font-weight-normal">Zaloguj się!</h3>
    <label for="inputEmail">E-mail</label><br><br>
    <input type="email" value="{{ last_username }}" placeholder="E-mail" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus><br><br>
    <label for="inputPassword">Hasło</label><br><br>
    <input type="password" placeholder="Hasło" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required><br><br>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button style="margin-left: 6%" class="btn btn-lg btn-primary" type="submit">
        Zaloguj się
    </button>
</form>
</div>
{% endblock %}
