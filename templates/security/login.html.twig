{% extends 'base.html.twig' %}

{% block title %}Zaloguj się!{% endblock %}

{% block body %}
    </div>
    <div style="padding: 3%; padding-left:45%; margin-top: 10%;">
    <form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h3 style="padding-left: 3%; color: purple" class="h3 mb-3 font-weight-normal">Zaloguj się!</h3>
    <label for="inputEmail">E-mail</label><br><br>
    <input style="outline: none" type="email" value="{{ last_username }}" placeholder="E-mail" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus><br><br>
    <label for="inputPassword">Hasło</label><br><br>
    <input  style="outline: none" type="password" placeholder="Hasło" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required><br><br>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    <button style="margin-left: 6%" class="btn btn-lg btn-primary" type="submit">
        Zaloguj się
    </button>
</form>
</div>
{% endblock %}
