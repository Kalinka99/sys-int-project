{% set error_replace = {'<ul>': '', '</ul>': '', '<li>': '<p>', '</li>': '</p>', '{{': '<b>', '}}': '</b>'} %}

{{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
<style>
    .form{
        margin-left: 42%;
        outline: none;
    }
    .nodisplay{
        display: none;
    }
    .noOutline{
        outline: none;
    }
    .form_error{
        margin-left: 7%;
    }
</style>
<div class="form">
    {{'form.name'|trans({})}}
    {{ form_widget(form.name, {
        'attr' : {
        'class' : 'noOutline'}
    }) }}

    {{ form_widget(form.articles, {
        'attr' :{
        'class' : 'nodisplay'
    }})}}
    <div class="form_error">
        {{ form_errors(form.name) | replace(error_replace) | raw }}
    </div>
    <button style="margin-left: 10%; margin-top: 2%" class="btn">{{ 'save_button' |trans }}</button>
</div>
{{ form_end(form) }}
